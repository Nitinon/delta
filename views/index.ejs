<% include ./partials/header%>

<body>
    <!-- Nav tabs -->
    <nav class="navbar navbar-expand-sm navbar-dark bg-success">
        <!-- Links -->
        <ul class="navbar-nav navbar-left">
            <li class="nav-item">
                <a href="/" class="navbar-brand ">Delta library</a>
            </li>
            <li class="nav-item">
                <a href="/" class="nav-link">username: <%=user.username%></a>
            </li>
            <li class="nav-item">
                <a href="/clearCart" class="nav-link">cart <span class="badge badge-warning"><%=cart%></span></a>
            </li>
            <li class="nav-item">
                <a href="/logout" class="btn btn-danger">Logout</a>
            </li>
    </nav>

    <div class="container ">
        <form action="/search" method="POST">
            <select name="searchOp">
                <option value="name">ชื่อหนังสือ</option>
                <option value="category">ประเภท</option>
                <option value="author">ผู้แต่ง</option>
            </select>
            <input type="text" name="keyword">
            <input type="submit" class="btn btn-primary" value="search">
        </form>
        <table class="table paginated">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Author</th>
                    <th>YearPublish</th>
                    <th>Detail</th>
                    <th>Add</th>
                </tr>
            </thead>
            <tbody>
                <% results.forEach(function(result) { %>
                <tr>
                    <td class="text-danger"><%= result.name %> </td>
                    <td><%= result.category %></td>
                    <td><%= result.author %></td>
                    <td><%= result.year_publish %></td>
                    <td><a href="" class="btn btn-primary btn-sm">more</a></td>
                    <td><a href="/addCart/<%=result.book_id%>" class="btn btn-success btn-sm">Add</a></td>
                </tr>
                <% }); %>
            </tbody>
        </table>

    </div>
</body>

</html>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
<script src="/static/sc.js"></script>